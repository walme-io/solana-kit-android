<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.balance.BalanceFragment">

    <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.064" />

    <TextView
            android:text="Balance: "
            android:layout_width="388dp"
            android:layout_height="0dp"
            android:id="@+id/balanceText"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/balanceText"
            android:layout_marginEnd="11dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Refresh"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/refreshButton"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/balanceText"
            android:layout_marginStart="59dp"
            app:layout_constraintStart_toEndOf="@+id/startButton" />

    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/balanceText" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balanceSyncStateText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="308dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:text="TextView" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tokenBalanceSyncStateText"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/startButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txsSyncStateText"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tokenBalanceSyncStateText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastBlockHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txsSyncStateText" />
</androidx.constraintlayout.widget.ConstraintLayout>